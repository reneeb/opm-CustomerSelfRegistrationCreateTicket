<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="Config">
    <ConfigItem Name="CUSRTC::Title" Required="0" Valid="1">
        <Description Translatable="1">Title for ticket.</Description>
        <Group>CustomerSelfRegistrationCreateTicket</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex="">New CustomerUser</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="CUSRTC::Queue" Required="0" Valid="1">
        <Description Translatable="1">Queue for ticket.</Description>
        <Group>CustomerSelfRegistrationCreateTicket</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex="">Misc</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="CUSRTC::Priority" Required="0" Valid="1">
        <Description Translatable="1">Priority for ticket.</Description>
        <Group>CustomerSelfRegistrationCreateTicket</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex="">3 normal</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="CUSRTC::State" Required="0" Valid="1">
        <Description Translatable="1">State for ticket.</Description>
        <Group>CustomerSelfRegistrationCreateTicket</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex="">new</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="CUSRTC::Body" Required="0" Valid="1">
        <Description Translatable="1">Queue for ticket.</Description>
        <Group>CustomerSelfRegistrationCreateTicket</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <TextArea>
<![CDATA[ [% Data.UserLogin %] just registered.<br /><br />
[% Config("HttpType") %]://[% Config("FQDN") %]/[% Config("ScriptAlias") %]/index.pl?Action=AdminCustomerUser;Subaction=Change;ID=[% Data.UserLogin | uri %];Nav=Agent
]]>
            </TextArea>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="CustomerUser::EventModulePost###108-SelfRegistrationCreateTicket" Required="0" Valid="1">
        <Description Translatable="1">Event module that creates a ticket when a customer registers himself.</Description>
        <Group>CustomerSelfRegistrationCreateTicket</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::System::CustomerUser::Event::SelfRegistrationCreateTicket</Item>
                <Item Key="Event">CustomerUserAdd</Item>
                <Item Key="Transaction">0</Item>
            </Hash>
        </Setting>
    </ConfigItem>
</otrs_config>
